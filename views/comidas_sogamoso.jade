   div(class="derecha" align="center")
    #Pizza
      h2(class="titulom") Muralla  
       .margenduitama
                  .div
                    section(class="ciudades" style="overflow-x:hidden; overflow-y:scroll; height: 1400px " )
                        for imagen in imagenes
                          if imagen.foto == 'promocion'
                               if imagen.creator. gremio == "comidas"
                                if imagen.creator.ciudad == "sogamoso"
                                  div
                                      h2 #{imagen.title}
                                      a(href="/iniciado/#{imagen.creator.username}/#{imagen.creator._id}"  class="ordenado")
                                          img(src="public/imagenes/#{imagen._id}.#{imagen.extension}",class="main-img" alt="#{imagen.creator.username}" title="#{imagen.creator.username}")
