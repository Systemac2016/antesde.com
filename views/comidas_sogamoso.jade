block contenido
  div(align='center')
           div
            .untiempo(style='margin-top: -20px; margin-bottom:  0px; ', role='')
              picture
                 source(srcset='./public/imagenes/img/antesde3-3.jpg', media='(max-width:450px)' class="imageniniciciocool")
